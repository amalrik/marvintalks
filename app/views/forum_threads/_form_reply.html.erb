<%= form_for @child_thread do |f| %>
  <%= f.hidden_field :parent_thread_id %>
  <ul>
  <% @child_thread.errors.full_messages.each do |error| %>
    <li><%= error %></li>
  <% end %>
  </ul>
  <p>
    <%= f.label :Resposta %><br />
    <%= f.text_field :subject %>
  </p>
  
  <p>
    <%= f.submit %>
  </p>
<% end %>